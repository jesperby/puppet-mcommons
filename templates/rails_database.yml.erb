default: &default
  adapter: mysql2
  encoding: utf8
  collation: utf8_swedish_ci
  host: localhost
  pool: 20
  username: <%= @mcommons::mysql::db_user %>
  password: <%= @mcommons::mysql::db_password %>
  database: <%= @mcommons::mysql::db_name %>

<% if @runner_name == 'vagrant' %>
development:
  <<: *default
<% else -%>
production:
  <<: *default
<% end -%>

<% if @mcommons::mysql::create_test_db -%>
test:
  <<: *default
  database: <%= @mcommons::mysql::db_name %>_test
<% end -%>
